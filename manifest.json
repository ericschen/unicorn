{
  "name" : "Unicorn",
  "version" : "0.1",
  "description" : "Senses if there is audio or video on the tab",
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action" :
  {
    "default_icon" : "video-19.png",
    "default_popup" : "popup.html"
  },
  "permissions": [ "declarativeContent" ],
  "icons" : {
    "48" : "video-48.png",
    "128" : "video-128.png"
  },
  "manifest_version": 2
}
